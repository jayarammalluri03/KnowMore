<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="background">@color/white</item>
        <!-- Hint for edit text -->
        <item name="android:hint">@string/search</item>
        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/grey</item>
        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/black</item>
        <item name="searchIcon">@drawable/search</item>
    </style>

    <string name="search">Search\n</string>
</resources>
